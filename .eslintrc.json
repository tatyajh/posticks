{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true, 
        "node": true, 
        "mocha": true 
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
       "prettier/prettier": "error",
       "no-console": "warn", 
       "no-use-before-define": "warn", 
       "spaced-comment": "warn" 
    }
}
